<div class="container">
  <div>
    <h1><%= @article.title %></h1>
  </div>
  <div>
    <p><%= @article.content %></p>
  </div>
  <div>
    <p><%= link_to 'edit', edit_article_path(@article) %></p>
  </div>
  <div>
    <%= link_to 'delete',
                article_path(@article),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
  </div>
</div>
